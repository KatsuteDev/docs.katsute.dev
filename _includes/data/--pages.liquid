{% capture __newline %}
{% endcapture %}
{% assign __sorted = site.pages | sort: "title", "last" %}
{% for __page in __sorted %}
    {% assign __head = __page.path | split: '/' %}
    {% if
        __page.url != '/' and
        __head[0] != "dependencies" and
        __head[0] != "404.html" and
        __head[1] != "javadoc"
    %}
        "{{ __page.url | slugify | remove: "-html" | remove: "-md" }}": {
            "title": "{% include function/resolve-name.liquid path = __page.path %}",
            "content": {{ __page.content | prepend: __newline | prepend: __page.description | markdownify | replace: __newline, ' ' | strip_html | jsonify }},
            "path": "{{ __page.url | xml_escape | remove: ".html" | remove: ".md" }}",
            "crumb": "{% capture __crumb %}{% include breadcrumb.liquid path=__page.path raw=true %}{% endcapture %}{{ __crumb | strip_newlines | strip | replace: '"', "'" }}",
            "lang": "{{ __page.path | split: '/' | first | downcase }}"
        }{% unless forloop.last %},{% endunless %}
    {% endif %}
{% endfor %}